<div class="col-md-10 col-md-offset-1">
  <div class="new-play-form">
    <h1>Editar obra</h1>
    <br>

    <%= simple_form_for @play, html: { multipart: true } do |f| %>
      <%= f.file_field :play_img %>
      <br>
      <%= f.select :category_id, @categories %>
      <br><br>
      <%= f.input :title, label: "Título" %>
      <%= f.input :description, label: "Descripción" %>
      <%= f.input :director %>
      <%= f.button :submit, label: "Actualizar" %>
    <% end %>
  </div>
</div>
