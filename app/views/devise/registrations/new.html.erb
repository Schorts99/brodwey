<div class="col-md-10 col-md-offset-1">
  <div class="signup-form">
    <h2>Registro</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, label: "Correo eléctronico", required: true, autofocus: true %>
        <%= f.input :password, required: true, label: "Contraseña", hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, label: "Confirma tu contraseña" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrar", class: 'btn-custom2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
